{
  "name": "websitex",
  "version": "1.0.0",
  "description": "A production-ready Django boilerplate based on [DjangoX](https://github.com/wsvincent/djangox).",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm:django\" \"npm:worker\" \"npm:watch:css\" \"npm:watch:js\"",
    "django": "python manage.py runserver 0.0.0.0:8000",
    "worker": "python manage.py rqworker --with-scheduler",
    "watch": "concurrently \"npm:watch:css\" \"npm:watch:js\"",
    "watch:js": "NODE_ENV=development node esbuild.config.js",
    "watch:css": "tailwindcss -i frontend/css/main.css -o static/dist/main.css --postcss -w",
    "build": "concurrently \"npm:build:css\" \"npm:build:js\"",
    "build:js": "NODE_ENV=production node esbuild.config.js",
    "build:css": "tailwindcss -i frontend/css/main.css -o static/dist/main.css --postcss"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rahmanfadhil/websitex.git"
  },
  "keywords": [],
  "author": "Rahman Fadhil <rhmnfadhil@gmail.com> (https://rahmanfadhil.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rahmanfadhil/websitex/issues"
  },
  "homepage": "https://github.com/rahmanfadhil/websitex#readme",
  "dependencies": {
    "@alpinejs/focus": "^3.10.2",
    "@fontsource/inter": "^4.5.14",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.7",
    "alpinejs": "^3.10.5",
    "esbuild": "^0.15.14",
    "js-cookie": "^3.0.1"
  },
  "devDependencies": {
    "@types/alpinejs": "^3.7.0",
    "@types/alpinejs__focus": "^3.10.0",
    "@types/js-cookie": "^3.0.2",
    "autoprefixer": "^10.4.12",
    "concurrently": "^7.5.0",
    "postcss": "^8.4.18",
    "postcss-import": "^15.0.0",
    "postcss-url": "^10.1.3",
    "tailwindcss": "^3.2.1"
  }
}
