# https://editorconfig.org/

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

# Use 2 spaces for the HTML/CSS/JS files
[*.{html,js,mjs,ts,tsx,css,scss,json,yml}]
indent_size = 2

# Makefiles always use tabs for indentation
[Makefile]
indent_style = tab
